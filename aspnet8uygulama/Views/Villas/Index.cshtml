@model IEnumerable<EntityLayer.Entities.Villa>
<div class="card header bg-success bg-gradient m-lg-0 py-3">
    <h1>Villa Listesi</h1>
</div>

<div class="card-body border p-4">
    <div class="row pb-3">
        <div class="col-6 offset-6 text-end">
            <a asp-controller="Villas" asp-action="Create" class="btn btn-secondary">
                <i class="bi bi-bookmark-plus-fill"></i>
                Yeni Kayıt
            </a>

        </div>
    </div>

</div>
<table class="table table-bordered table-striped">
    <tr>
        <th>Adı</th>
        <th>Ücreti</th>
        <th>Kat Sayısı</th>
        <th>Boş mu</th>
        <th></th>
    </tr>
    @foreach (var obj in Model)
    {
        <tr>
            <td>@obj.Name</td>
            <td>@obj.Price</td>
            <td>@obj.Sqft</td>
            <td>@obj.Occupancy</td>
            <td>
                <div class="w-75 btnbtn-group" role="group">
                    <a asp-action="Edit" asp-controller="Villas" asp-route-villaId="@obj.Id" class="btn btn-warning mx-2">Edit</a>
                    <a asp-action="Delete" asp-controller="Villas" asp-route-villaId="@obj.Id" class="btn btn-danger mx-2">Delete</a>
                </div>
            </td>
        </tr>
    }
</table>