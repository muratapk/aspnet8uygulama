@model IEnumerable<EntityLayer.Entities.Villa>
<div class="card header bg-success bg-gradient m-lg-0 py-3">
    <h1>Villa Listesi</h1>
</div>

<div class="card-body border p-4">
    <div class="row pb-3">
        <div class="col-6 offset-6 text-end">
            <a asp-controller="Villa" asp-action="Create" class="btn btn-secondary">
                <i class="bi bi-bookmark-plus-fill"></i>
                Yeni Kayıt
            </a>
           
        </div>
    </div>

</div>
    <table class="table table-bordered table-striped">
        <tr>
            <th>Adı</th>
            <th>Ücreti</th>
            <th>Kat Sayısı</th>
            <th>Boş mu</th>

        </tr>
        @foreach(var obj in Model)
    {
        <tr>
            <td>@obj.Name</td>
            <td>@obj.Price</td>
            <td>@obj.Sqft</td>
            <td>@obj.Occupancy</td>
        </tr>
    }
</table>